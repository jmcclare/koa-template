doctype html
html.no-js(lang="")
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    - var titleAddition = (section === 'site-root' ? '' : ' - Koa Site Template')
    title #{title}#{titleAddition}
    meta(name="description" content="#{description}")
    meta(name='author', content='#{author}')
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")

    link(rel="apple-touch-icon" href="apple-touch-icon.png")

    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,700',  type='text/css')
    //- Icon font Font Awesome: http://fontawesome.com/
    //- Change this to the specific fontawesome set you are using. See
    //- public/_css/fontawesome/css for available sets.
    link(rel='stylesheet', href='/_css/fontawesome/css/fontawesome-all.min.css',  type='text/css')

    link(rel="stylesheet" href="/_css/site.css")

    script(src="/_js/lib/modernizr-2.8.3.min.js")

    - if (baseURL) {
    base(href='#{baseURL}')
    - }
  body
    //
        [if lt IE 9]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]

    #top-bar
      nav
        ul
          li
            a(href=router.url('home')) Home
          li
            a(href=router.url('users')) Users
          li
            a(href=router.url('test1')) Test 1
          li
            a(href=router.url('test2')) Test 2

    block flash
      //-- var infoFlash = req.flash('info').pop();
      //-- var errorFlash = req.flash('error').pop();

      - if (infoFlash || errorFlash) {
      div#flash

        - if (infoFlash) {
        .alert-box
          != infoFlash
          a.close(href='') ×
        - }

        - if (errorFlash) {
        .alert-box.alert
          != errorFlash
          a.close(href='') ×
        - }
      - }

    #main-content
      block body

    #bottom-bar
      footer
        section.social-media
          h1 Follow Us
          //-I have to add the HTML entity code spaces (&#32;) below because my
          //-text editor removes any trailing space for me when I save the
          //-file.
          p.icons
            a(href='#', title='Koa Template on Facebook')
              span.fab.fa-facebook-square
            | &#32;
            a(href='#', title='Koa Template on YouTube')
              span.fab.fa-youtube-square
            | &#32;
            a(href='#', title='Koa Template on Twitter')
              span.fab.fa-twitter-square
            | &#32;
            a(href='#', title='Koa Template on Instagram')
              span.fab.fa-instagram
            | &#32;
            a(href='#', title='Koa Template on tumblr')
              span.fab.fa-tumblr-square
        section.copyright
          p &copy; Company 2012


    script(src="/_js/site.js")
    script(src="/_js/react-app.js")

    // Google Analytics: change UA-XXXXX-Y to be your site's ID.
    script  window.ga=function(){ga.q.push(arguments)};ga.q=[];ga.l=+new Date; ga('create','UA-XXXXX-Y','auto');ga('send','pageview')
    script(src="https://www.google-analytics.com/analytics.js" async defer)
