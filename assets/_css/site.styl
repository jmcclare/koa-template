//
// Sample Page Layout
//

nav, footer
  center()

#main-content
  center()

main
  column(2/3)
  // Uncomment these moves to switch the main and aside.
  //move(1/3)

aside
  column(1/3)
  // Uncomment these moves to switch the main and aside.
  //move(-2/3)

.priced-items
  clearfix()

.priced-item
  column(1/3, $cycle: 3)
  // Use this line instead if you want the item margins to be the same width as
  // the main page layout column margins.
  //column(1/3 2/3, $cycle: 3)


//
// Specific page styles
//


// React Tic Tac Toe app

#tic-tac-toe
  margin .5em 0

.board-rowafter
  clear both
  content ""
  display table

.status
  margin-bottom 10px

.square
  //background #fff
  border 1px solid #999
  float left
  font-size 24px
  font-weight bold
  line-height 34px
  height 34px
  margin-right -1px
  margin-top -1px
  padding 0
  text-align center
  width 34px

.squarefocus
  outline none

.kbd-navigation .squarefocus
  background #ddd

.game
  display flex
  flex-direction row

.game-info
  margin-left 20px


//
// Size Adaptations
//

// medium width layout
@media (max-width: screen-medium)
  .centred, #main-content, main, aside
    max-width medium-width

  main, aside
    stack()
    unmove()


// mobile width layout
@media (max-width: screen-small)
  .priced-item
    stack()


