//debug()


//
// Sample Page Layout
//

nav, footer
  center()

#main-content
  center()

main
  column(2/3)
  // Uncomment these moves to switch the main and aside.
  //move(1/3)

main.products
  //column(3/3)
  stack()
  unmove()
  //width 100%

aside
  column(1/3)
  // Uncomment these moves to switch the main and aside.
  //move(-2/3)

.priced-items
  clearfix()

.priced-item
  column(1/3, $cycle: 3)
  // Use this line instead if you want the item margins to be the same width as
  // the main page layout column margins.
  //column(1/3 2/3, $cycle: 3)


//
// Specific page styles
//

.product-list
  clearfix()

.product
  column(1/4, $cycle: 4)

.product-name
  font-size ms(2)

.product-shot
  text-align center
  img
    max-width 100%


// medium width layout
@media (max-width: screen-medium)
  .centred, #main-content, main, aside
    max-width medium-width

  main, aside, main.products
    stack()
    unmove()

  .product
    column(1/2, $cycle: 2)


// mobile width layout
@media (max-width: screen-small)
  .priced-item
    stack()

  .product
    stack()


/* Medium size / tablet display targeting */
@media only screen and (min-width: screen-small + round((screen-medium - screen-small) / 2) + 1) and (max-width: screen-medium + round((screen-large - screen-medium) / 2))
  .product-name
    font-size ms(1)


/* Small (mobile) display targeting */
/* Lower the font sizes for small displays */
@media only screen and (max-width: screen-small + round((screen-medium - screen-small) / 2))
  .product-name
    font-size ms(0)


//
// Colors
//

body
  color #222

#top-bar, #bottom-bar
  background black
  color #eee
  a
    color #bcf
    text-decoration none
    &:hover
      color #fff
  nav ul li
    &:first-child a
      padding-left 0
