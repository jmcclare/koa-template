extend /layout

block main-content

  main.products
    header
      h1 #{title}

    p.
      Sample product list.

    - var prods = ['one', 'two', 'three']
    .product-list
      each prod in products
        .product-mini-teaser
          h2.product-name #{prod.name}
          p.product-shot
            img(src="http://via.placeholder.com/250x150")
          p
            strong $#{prod.price}
